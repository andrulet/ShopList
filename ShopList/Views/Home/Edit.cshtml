@model ShopList.Models.Product
@{
    ViewBag.Title = "Редактирование продукта";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменение товара.</h1>
<form asp-action="edit" asp-controller="home" asp-all-route-data='new Dictionary<string,string> { { "ProductId", Model.ProductId.ToString() }, {"ShopId", Model.ShopId.ToString() } }'>
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Название</label>
        <input type="text" asp-for="ProductName" placeholder="Enter some text" />
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription" class="control-label">Описание</label>
        <input type="text" asp-for="ProductDescription" placeholder="Enter some text" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
