@model ShopList.Models.Product
@{
    ViewBag.Title = "Добавление товара";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавить товар.</h1>
<form asp-action="Create" asp-controller="Home" asp-route-ShopId="@Model.ShopId">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Название товара : </label>
        <input type="text" asp-for="ProductName" placeholder="Enter some text" />
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription" class="control-label">Описание : </label>
        <input type="text" asp-for="ProductDescription" placeholder="Enter some text" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
